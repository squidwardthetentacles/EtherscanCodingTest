
<div id="editTokenModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h5 id=viewContractAddress></h5>
        <table class="table table-striped">
          <tbody>
            <form>

              <input type="hidden" id="editTokenId" />

              <div class="row mb-3">
                <label for="editTokenName" class="col-sm-5 col-form-label text-start">Name</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" id="editTokenName" placeholder="Name">
                </div>
              </div>

              <div class="row mb-3">
                <label for="editTokenSymbol" class="col-sm-5 col-form-label text-start">Symbol</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" id="editTokenSymbol" placeholder="Symbol">
                </div>
              </div>

              <div class="row mb-3">
                <label for="editTokenContractAddress" class="col-sm-5 col-form-label text-start">Contract Address</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" id="editTokenContractAddress" placeholder="Contract Address">
                </div>
              </div>
              
              <div class="row mb-3">
                <label for="editTokenTotalSupply" class="col-sm-5 col-form-label text-start">Total Supply</label>
                <div class="col-sm-5">
                  <input type="number" class="form-control" id="editTokenTotalSupply" placeholder="Total Supply">
                </div>
              </div>

              <div class="row mb-3">
                <label for="editTokenTotalHolders" class="col-sm-5 col-form-label text-start">Total Holders</label>
                <div class="col-sm-5">
                  <input type="number" class="form-control" id="editTokenTotalHolders" placeholder="Total Holders">
                </div>
              </div>

            </form>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="save(true)">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>